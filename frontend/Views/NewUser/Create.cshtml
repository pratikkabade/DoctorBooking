@{
    ViewBag.Title = "Create";
}
@model Users


<form asp-action="Create" asp-controller="NewUser" method="post" class="contactForm">
    <h1 class="headerText">Create new account</h1>
    <fieldset>
        <p>
            <input asp-for="FirstName" placeholder="FirstName" />
        </p>
        <p>
            <input asp-for="LastName" placeholder="LastName" />
        </p>
        <p>
            <input asp-for="Email" placeholder="Email" />
        </p>
        <p>
            <input asp-for="Password" placeholder="Password" />
        </p>
        <p>
            <button type="submit" class="btn btn-primary">Save</button>
        </p>
    </fieldset>
    <h6 style="color:red">@Html.Raw(@ViewBag.Message)</h6>

</form>